@model IEnumerable<BIED_research_suite.Models.Database_entities.Questionnaire>

@{
    ViewData["Title"] = "Vragenlijsten overzicht";
}

<h1>Vragenlijsten overzicht</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.QuestionnaireID">View</a> |
                <a asp-action="Edit" asp-route-id="@item.QuestionnaireID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.QuestionnaireID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
