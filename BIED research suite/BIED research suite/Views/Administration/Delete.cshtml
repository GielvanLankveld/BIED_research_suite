@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Gebruiker verwijderen";
}

<h1>Gebruiker verwijderen</h1>

<h3>Weet u zeker dat u deze gebruiker wilt verwijderen?</h3>
<div>
    <h4>Questionnaire</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar de lijst</a>
    </form>
</div>
