@model BIED_research_suite.Models.Database_entities.Questionnaire

@{
    ViewData["Title"] = "Vragenlijst verwijderen";
}

<h1>Vragenlijst verwijderen</h1>

<h3>Weet u zeker dat u de vragenlijst wilt verwijderen?</h3>
<div>
    <h4>Questionnaire</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IntroText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntroText)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="QuestionnaireID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar de lijst</a>
    </form>
</div>
